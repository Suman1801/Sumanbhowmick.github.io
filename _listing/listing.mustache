<div class="project-card">
  <h3>{{ title }}</h3>

  {{#image}}
    <img src="{{ image }}" alt="{{ title }}" class="project-thumb">
  {{/image}}

  {{#description}}
    <p>{{ description }}</p>
  {{/description}}

  {{#href}}
    <a href="{{ href }}" class="btn btn-primary">View Details</a>
  {{/href}}
</div>
